# Path to the react-native-embedded-app directory (absolute and relative)
react_native_app_path = File.expand_path('../react-native-embedded-app', __dir__)
node_modules_path = "#{react_native_app_path}/node_modules"
# use_react_native! expects RELATIVE paths from the Podfile location
react_native_path = '../react-native-embedded-app/node_modules/react-native'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', react_native_app_path]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'ioshostapp' do
  # Skip autolinking since we need to specify paths relative to THIS project
  # Instead, manually add the native module dependency
  
  # Manually add react-native-safe-area-context with absolute path
  pod 'react-native-safe-area-context', :path => "#{node_modules_path}/react-native-safe-area-context"
  
  use_react_native!(
    :path => react_native_path,
    # An absolute path to your application root.
    :app_path => react_native_app_path
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      react_native_path,
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
  end
end
